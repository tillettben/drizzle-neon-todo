# Enable hoisting for better compatibility with some packages
hoist=true

# Use pnpm's node_modules structure
node-linker=isolated

# Auto install peers
auto-install-peers=true

# Don't fail on missing peer dependencies
strict-peer-dependencies=false

# Use the registry with better caching
registry=https://registry.npmjs.org/

# Enable shell emulator for Windows compatibility
shell-emulator=true 
